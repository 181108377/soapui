<?xml version="1.0"?>

<!-- This is the same as dist.xml with the exception that we use the sh and bat files from the dist_standalone folder -->

<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>dist-standalone</id>
        <formats>
        <format>dir</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${maven.wsi.root}</directory>
            <outputDirectory>wsi-test-tools</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/dist</directory>
            <excludes>
                <exclude>bin/*.bat</exclude>
                <exclude>bin/*.sh</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/dist_standalone/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- TODO Ugly hack to create the empty listeners and actions directories -->
        <fileSet>
            <!-- This must be a directory without sub directories -->
            <directory>src/dist/bin/ext</directory>
            <outputDirectory>bin/actions</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/dist/bin/ext</directory>
            <outputDirectory>bin/listeners</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <!-- Filtred shell scripts -->
    <files>
        <file>
            <source>${basedir}/src/dist/bin/soapui.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/soapui.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/loadtestrunner.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/loadtestrunner.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/mockservicerunner.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/mockservicerunner.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/securitytestrunner.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/securitytestrunner.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/testrunner.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/testrunner.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/toolrunner.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/toolrunner.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/wargenerator.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/dist/bin/wargenerator.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
</assembly>
